    <div id="poster" class="scrolling-wrapper-flexbox">
      <% for(const img of files ){ %>
        <a class="card " href="javascript:void(0)" onclick="getTheaterLocation(event)"> <img  alt="<%= img.split('.')[0] %>" src="static/<%= img %>"></img>
        </a>
      <%}%>
    </div>
    <div id="map"></div>
    <script type="text/javascript">
      
    </script>
  </body>
</html>